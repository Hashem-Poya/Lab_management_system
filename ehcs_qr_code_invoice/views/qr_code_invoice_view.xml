<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
         <record id="lab_invoice_patient_invoice_view" model="ir.ui.view">
            <field name="name">account.invoice.patient.invoice_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="qr_image" widget="image"/>
                </xpath>

                <xpath expr="//form/header/button[@name='button_draft']" position="after">
                    <button string="Generate Sticker Barcode for Tube" name="sticker_barcode_generator" type="object" attrs="{'invisible': ['|', ('move_type', 'not in', ('out_invoice', 'in_invoice')), ('state', '!=', 'posted')]}"/>
<!--                    
                    <field name="qr_image" string="g"/> -->                    
                </xpath>

            </field>
        </record>   
    </data>
</odoo>





